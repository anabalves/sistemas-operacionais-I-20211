package view;

import javax.swing.JOptionPane;

import controller.RedesController;

public class Main {

	public static void main(String[] args) {
		
		RedesController redesController = new RedesController();

		int opc = 0;
		String sistemaOperacional;
		
		do {
			opc = Integer.parseInt(JOptionPane.showInputDialog("Digite o número de uma das opções\n "
					+ "1- Adaptador Ethernet e o IPv4\n "
					+ "2- Ping\n "
					+ "9- Finalizar Programa!"));

			switch (opc) {
			case 1:
				System.out.println(redesController.getIP(redesController.getOS()));
				break;
			case 2:
				System.out.println(redesController.getPing(redesController.getOS()));
				break;
			case 9:
				JOptionPane.showMessageDialog(null, "O programa foi finalizado!");
				break;
			default:
				JOptionPane.showMessageDialog(null, "Opção inválida!");
				break;
			}

		} while (opc != 9);
	}
}