package controller;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

import javax.swing.JOptionPane;

import persistence.Linux;
import persistence.SistemaOperacional;
import persistence.Windows;

public class RedesController {
	private InputStream fluxo;
	private InputStreamReader leitor;
	private BufferedReader buffer;

	private SistemaOperacional SistemaOperacional;

	public RedesController() {
		if (System.getProperty("os.name").contains("Windows"))
			SistemaOperacional = new Windows();
		else
			SistemaOperacional = new Linux();
	}

	public void getIP() {
		executeProcess(SistemaOperacional.getCommandIPOS());

		String result = SistemaOperacional.adaptadorEthernetIPv4(buffer);

		JOptionPane.showMessageDialog(null, result, "Resultado", JOptionPane.INFORMATION_MESSAGE);

		closeResources();
	}

	public void getPing() {
		executeProcess(SistemaOperacional.getCommandPingOS());

		String result = SistemaOperacional.PingOS(buffer);

		JOptionPane.showMessageDialog(null, result, "Resultado", JOptionPane.INFORMATION_MESSAGE);

		closeResources();
	}

	private void executeProcess(String command) {
		try {
			Process process = Runtime.getRuntime().exec(command);
			fluxo = process.getInputStream();
			leitor = new InputStreamReader(fluxo);
			buffer = new BufferedReader(leitor);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	private void closeResources() {
		try {
			fluxo.close();
			leitor.close();
			buffer.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
