	private void executeProcess(String sistemaOperacional) {
		try {
			if (sistemaOperacional.contains("Windows")) {
				Process processo = Runtime.getRuntime().exec("ipconfig");
			} else {
				Process processo = Runtime.getRuntime().exec("ifconfig");
			}
			Process processo;
			fluxo = processo.getInputStream();
			leitor = new InputStreamReader(fluxo);
			buffer = new BufferedReader(leitor);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	private void closeResources() {
		try {
			fluxo.close();
			leitor.close();
			buffer.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
